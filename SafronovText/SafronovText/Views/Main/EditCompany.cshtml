@model SafronovText.Models.CompanyModel

@{
    ViewBag.Title = "Редактировать компанию";
}

<h2>Редактировать компанию</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Редактировать компанию</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.CompanyID)
        </div>
        <div class="editor-field">
            <textarea readonly="readonly" style="height:15px;width:152px;">@ViewData.Model.CompanyID.ToString()</textarea>
            <div style="display:none">
                @Html.EditorFor(model => model.CompanyID)
                @Html.ValidationMessageFor(model => model.CompanyID)
            </div>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CompType)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CompType)
            @Html.ValidationMessageFor(model => model.CompType)
        </div>

        <p>
            <input type="submit" value="Сохранить" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Отмена", "Companies")
</div>
